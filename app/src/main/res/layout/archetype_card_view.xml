<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:elevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/archetype_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/baseline_accessible_24"
            android:contentDescription="Image for Archetype"
            />

        <TextView
            android:id="@+id/archetype_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/archetype_image"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/archetype_name_label"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/archetype_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/archetype_name_label"
            app:layout_constraintTop_toTopOf="@id/archetype_name_label"
            tools:text="Monk"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/archetype_damage_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/archetype_image"
            app:layout_constraintTop_toBottomOf="@id/archetype_name"
            android:text="@string/damage_type_label"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/archetype_damage_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Physical"
            app:layout_constraintTop_toTopOf="@id/archetype_damage_type_label"
            app:layout_constraintStart_toEndOf="@id/archetype_damage_type_label"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/archetype_health_die_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/archetype_image"
            app:layout_constraintTop_toBottomOf="@id/archetype_damage_type"
            android:text="@string/health_die_label"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/archetype_health_die"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="d12"
            app:layout_constraintTop_toTopOf="@id/archetype_health_die_label"
            app:layout_constraintStart_toEndOf="@id/archetype_health_die_label"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/archetype_position_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/archetype_image"
            app:layout_constraintTop_toBottomOf="@id/archetype_health_die"
            android:text="@string/position"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/archetype_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Skirmisher"
            app:layout_constraintTop_toTopOf="@id/archetype_position_label"
            app:layout_constraintStart_toEndOf="@id/archetype_position_label"
            android:layout_marginStart="5dp"
            />


        <TextView
            android:id="@+id/archetype_fun_level_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/archetype_image"
            app:layout_constraintTop_toBottomOf="@id/archetype_position"
            android:text="@string/fun_level_label"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/archetype_fun_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10"
            app:layout_constraintTop_toTopOf="@id/archetype_fun_level_label"
            app:layout_constraintStart_toEndOf="@id/archetype_fun_level_label"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/archetype_complexity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/archetype_image"
            app:layout_constraintTop_toBottomOf="@id/archetype_fun_level"
            android:text="@string/complexity"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/archetype_complexity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Very Complex"
            app:layout_constraintTop_toTopOf="@id/archetype_complexity_label"
            app:layout_constraintStart_toEndOf="@id/archetype_complexity_label"
            android:layout_marginStart="5dp"
            />
        <TextView
            android:id="@+id/archetype_playable_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/archetype_image"
            app:layout_constraintTop_toBottomOf="@id/archetype_complexity"
            android:text="@string/playable"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/archetype_playable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="true/false"
            app:layout_constraintTop_toTopOf="@id/archetype_playable_label"
            app:layout_constraintStart_toEndOf="@id/archetype_playable_label"
            android:layout_marginStart="5dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>